<h1>Instagram App </h1>
<% @posts.each do |post| %>
      <tr>
        <td><%= post.caption %></td>
         <td><%= link_to image_tag(post.image.url, class: 'media-object', size: "300x300"), post.image.url, target: '_blank' %></td>
         <td><%= link_to 'Show', post %></td>
         <td><%= link_to 'Edit', edit_post_path(post) %></td>
         <td><%= button_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
<% end %>
<div id="infinite-scrolling">
  <%= will_paginate @posts %>
</div>
